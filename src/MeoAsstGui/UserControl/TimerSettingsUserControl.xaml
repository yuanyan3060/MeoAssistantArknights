                </CheckBox.Content>
            </CheckBox>
            <TextBox Text="{Binding Timer3Hour}" TextWrapping="Wrap" Margin="10" Width="50" InputMethod.IsInputMethodEnabled="False" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
